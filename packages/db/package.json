{
  "name": "@cloud/db",
  "module": "index.ts",
  "type": "module",
  "types": "./src/prisma.ts",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/prisma.d.ts",
      "import": "./dist/prisma.js"
    },
    "./db-types": {
      "types": "./generated/prisma/index.d.ts",
      "import": "./generated/prisma/index.js"
    }
  },
  "scripts": {
     "clean:build": "rm -rf dist",
     "build:js:types": "tsc -p tsconfig.build.json ",
    "build:prod": "bun run clean:build && bun run build:js:types",
    "db:prod:generate": " bunx prisma generate && bun run build:prod",
    "db:migrate": "bunx prisma migrate dev",
    "db:seed": "bunx prisma seed",
    "db:deploy": "bunx prisma deploy",
    "db:studio": "bunx prisma studio"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bun": "latest"
  },
  "dependencies": {
    "@prisma/client": "6.15.0",
    "prisma": "^6.15.0"
  }
}
