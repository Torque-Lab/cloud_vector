{
  "name": "@cloud/shared_types",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./index": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "clean:build": "find . -type f ! -name '*.ts' -delete && find . -type d -empty -delete",
    "build:js": "tsc -p tsconfig.build.json",
    "build:prod": "bun run build:js",
    "watch": "chokidar 'src/**/*.ts' -c 'bun run build:js'"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "chokidar-cli": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": "^5",
    "zod": "3.25.76"
  },
  "dependencies": {
    "@cloud/backend-common": "workspace:*",
    "@cloud/db": "workspace:*"
  }
}
