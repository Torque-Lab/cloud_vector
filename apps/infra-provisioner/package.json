{
  "name": "@cloud/infra-provisioner",
  "module": "index.ts",
  "dependencies": {
    "@cloud/backend-common": "*",
    "@cloud/db": "*",
    "@cloud/shared_types": "*",
    "@kubernetes/client-node": "^1.4.0",
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*"
  },
  "private": true,
  "scripts": {
    "dev": "bun run --watch ./src/index.ts",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "build:prod": "bun build ./src/index.ts --target bun --outdir dist --external node:* --external @cloud/db --sourcemap",
    "start:prod": "bun run ./dist/index.js"
  },
  "type": "module"
}
