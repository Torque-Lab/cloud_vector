{
  "name": "@cloud/infra-provisioner",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run ./src/index.ts",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "build:prod": "bun build ./src/index.ts --outdir dist --external node:* --external db --external ../generated/prisma --external @prisma/client --external prisma --external .prisma",
    "start:prod": "bun run ./dist/index.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*"
  },
  "peerDependencies": {
    "axios": "^1.12.2"
  },
  "dependencies": {
    "@cloud/backend-common": "*",
    "@cloud/shared_types": "*",
    "@kubernetes/client-node": "^1.4.0",
    "@types/express": "^5.0.3",
    "@types/js-yaml": "^4.0.9",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0"
  }
}
