{
  "name": "mcp-server",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "devd": "bun run ./src/index.ts",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "build:prod": "bun build ./src/index.ts --outdir dist --external node:* --external db --external ../generated/prisma --external @prisma/client --external prisma --external .prisma",
    "start:prod": "bun run ./dist/index.js"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bun": "latest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "express": "^5.1.0"
  },
  "peerDependencies": {
    "zod": "3.25.76"
  }
}
